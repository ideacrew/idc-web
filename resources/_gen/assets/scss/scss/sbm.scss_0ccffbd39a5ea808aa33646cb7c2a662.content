.awards-list{display:grid;margin-top:0;padding:0;grid-template-columns:repeat(auto-fit, minmax(15rem, 1fr));list-style:none;gap:0.75rem}.award-item{display:grid;position:relative;padding:var(--side-padding);grid-template-columns:1fr;grid-template-rows:12em max-content max-content;border:2px solid var(--secondary-blue);border-radius:0.27em;list-style:none}.award-image{filter:grayscale(1);align-self:center;justify-self:center}.award-item:hover .award-image,.award-item:focus .award-image,.award-item:focus-within .award-image{filter:grayscale(0)}.award-link::after{position:absolute;top:0;right:0;bottom:0;left:0;content:''}.heading-section{column-gap:0.5rem;grid-template-columns:repeat(4, 1fr)}.heading-section h1{grid-column:1 / -1}.heading-section p{grid-column:1 / 4}.heading-section .supplemental-information{display:flex;flex-direction:column;align-items:start;justify-content:center;gap:1rem}.heading-section .button+.button{margin-top:0.5rem}.benefits-modules details+details{margin-top:1rem}.benefits-modules summary{font-size:1.33rem}.benefits-modules .details-container{column-gap:0.5rem;grid-template-columns:repeat(4, 1fr)}.benefits-modules .details-container p{grid-column:1 / 4}.benefits-modules .supplemental-information{grid-column:1 / 4;display:flex;flex-direction:column;align-items:start;justify-content:center;gap:1rem}.modules-heading{margin-bottom:0.5rem}.expand-modules{font-size:0.75rem}.collapse-modules{margin-left:1rem;font-size:0.75rem}.back-to-top{float:right;border:0;background-color:transparent}@media screen and (min-width: 769px){.details-container{display:grid;margin-top:0.5rem}.benefits-modules .supplemental-information{display:block}}
