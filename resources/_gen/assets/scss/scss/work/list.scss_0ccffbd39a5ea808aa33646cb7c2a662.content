.work-item{--img-width: 100;--img-height: 100;display:grid;position:relative;padding:var(--side-padding);grid-template-columns:1fr 1fr;border-bottom:1px solid rgba(0,0,0,0.25);list-style:none;cursor:pointer}.work-image{grid-row:span 2}.work-title{margin:0;font-size:0.667rem}.work-summary{font-size:0.556rem;grid-column:2 / 3}@media (hover: hover){.work-image{filter:grayscale(1)}.work-item:hover .work-image,.work-item:focus .work-image,.work-item:focus-within .work-image{filter:grayscale(0)}}.work-link::after{position:absolute;top:0;right:0;bottom:0;left:0;content:''}@media screen and (min-width: 600px){.work-item{grid-template-columns:1fr;grid-template-rows:max-content minmax(max-content, 5rem) max-content;border-bottom:0;border-radius:0.27em;box-shadow:0 0 4px rgba(0,0,0,0.25)}.work-image{--img-width: 168;--img-height: 168;grid-row:unset;place-self:center}.work-title{align-self:center;font-size:1rem}.work-summary{font-size:0.78rem;grid-column:unset}}.work-page .work-list{margin:0;padding:0}.work-page .work-item+.work-item{margin-top:1rem}.work-content-container:empty{display:none}@media screen and (min-width: 769px){.work-page .work-list{display:grid;grid-template-columns:repeat(auto-fit, minmax(12rem, 1fr));gap:1rem}.work-page .work-item+.work-item{margin-top:0}}
