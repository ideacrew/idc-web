.contact-us-page>*+*{margin-top:1rem}.contact-us-page .contact-info{grid-area:contact contact;line-height:2;z-index:2}.contact-us-page .contact-info .label-heading{font-weight:700}.contact-us-page .contact-info a+.label-heading{margin-top:1rem}.contact-us-page .contact-info a{color:var(--secondary-blue)}.contact-form{position:relative;margin-top:1rem;z-index:2;grid-area:form}.contact-form label{margin-bottom:0.125rem;color:var(--neutral-020);font-size:0.75rem}.contact-form>*+*{margin-top:1rem}.contact-form input{display:block;width:100%;padding:0.5rem 0 0.5rem 0.5rem;border:1px solid var(--neutral-058, chartreuse);border-radius:5px}.contact-form textarea{display:block;width:100%;padding:0.5rem;border:1px solid var(--neutral-058, chartreuse);border-radius:5px}.contact-form .submit-button{display:block;width:100%;padding:0.75rem 0;border:0;border-radius:5px;background-color:var(--blue-035, chartreuse);color:var(--neutral-094)}.contact-form .submit-button:disabled{background-color:var(--neutral-031, chartreuse);cursor:not-allowed}.cta-careers{display:flex;flex-direction:column;padding:4rem 0;grid-area:cta}.cta-careers a{text-align:center}.cta-careers svg{align-self:center;margin-top:1rem}.map{display:none;grid-area:map}@media screen and (min-width: 1128px){.map{display:block;background-image:url("https://res.cloudinary.com/ideacrew/image/upload/f_auto/v1605645847/ideacrew-website/google-map-image.jpg");background-repeat:no-repeat;background-size:100%;background-size:cover}.contact-us-page{column-gap:1rem;grid-template-columns:1fr repeat(2, 26.665rem) 1fr;grid-template-areas:'. heading heading .' '. form map .' '. contact contact .' '. cta cta . '}.contact-us-page h1{grid-area:heading}.contact-us-page .cta-careers{display:grid;grid-template-columns:1fr 1fr;gap:1rem}.contact-us-page .cta-careers h2,.contact-us-page .cta-careers a{margin:0;grid-column:1 / 2}.contact-us-page .cta-careers h2{align-self:end}.contact-us-page .cta-careers a{align-self:start}.contact-us-page .cta-careers svg{margin:0;grid-column:2 / -1;grid-row:1 / span 2;justify-self:center}}
