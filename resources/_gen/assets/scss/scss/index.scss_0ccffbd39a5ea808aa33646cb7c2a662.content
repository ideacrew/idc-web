.work-item{--img-width: 100;--img-height: 100;display:grid;position:relative;padding:var(--side-padding);grid-template-columns:1fr 1fr;border-bottom:1px solid rgba(0,0,0,0.25);list-style:none;cursor:pointer}.work-image{grid-row:span 2}.work-title{margin:0;font-size:0.667rem}.work-summary{font-size:0.556rem;grid-column:2 / 3}@media (hover: hover){.work-image{filter:grayscale(1)}.work-item:hover .work-image,.work-item:focus .work-image,.work-item:focus-within .work-image{filter:grayscale(0)}}.work-link::after{position:absolute;top:0;right:0;bottom:0;left:0;content:''}@media screen and (min-width: 600px){.work-item{grid-template-columns:1fr;grid-template-rows:max-content minmax(max-content, 5rem) max-content;border-bottom:0;border-radius:0.27em;box-shadow:0 0 4px rgba(0,0,0,0.25)}.work-image{--img-width: 168;--img-height: 168;grid-row:unset;place-self:center}.work-title{align-self:center;font-size:1rem}.work-summary{font-size:0.78rem;grid-column:unset}}.client-list{--min-width: 100px;display:grid;margin-top:0;padding:0;grid-template-columns:repeat(auto-fill, minmax(var(--min-width), 1fr));list-style:none}.client-tile{display:flex;justify-content:center;list-style:none}.client-image{width:100%;height:auto;padding:0.5rem;filter:grayscale(1)}@media screen and (min-width: 769px){.client-list{--min-width: 150px;gap:1rem}.client-image{width:auto;padding:0}}.index-heading{display:flex;flex-direction:column;align-items:center;justify-content:center;height:calc(100vh - var(--header-height) + 2rem)}.index-heading .button{margin-top:0.5rem;font-size:0.89rem}.index-heading .outline{background-color:var(--white)}.hero-break{display:none}.hero-heading{margin:0;font-size:1.25rem;line-height:1.5}.sbm-section .sbm-item-list{margin:0;padding:0}.sbm-section .sbm-item{display:flex;align-items:center;justify-content:space-between;margin:0 calc(var(--side-padding) * -1);padding:1rem var(--side-padding);background-color:var(--blue-035);color:var(--white)}.sbm-section .boxes{display:grid;grid-template:repeat(2, 1fr)/repeat(2, 1fr);gap:2px;width:2rem;height:2rem}.sbm-section .box{--opacity: 0.25;background-color:hsla(0, 0%, 100%, var(--opacity))}.sbm-section .highlighted{--opacity: 1}.sbm-section p{margin-top:1rem}.sbm-section a{font-weight:600}.services-section{display:grid;grid-template:repeat(3, min-content)/max-content 1fr}.services-section .services-list{margin:0;padding:0.5rem 1rem;border-radius:5px;background-color:var(--blue-035);list-style:none;grid-column:1 / 2}.services-section .services-item{padding:0.5rem 0;color:var(--white);font-weight:600}.services-section .button{width:100%;margin-top:1rem}.services-section img{place-self:center}.services-section .services-large{display:none}.services-section h2,.services-section a{grid-column:1 / -1}.services-section a{padding:1rem 0;font-weight:600}.recent-work-section .work-list{display:grid;margin:0;padding:0;grid-template-columns:repeat(auto-fit, minmax(12rem, 1fr));grid-template-rows:auto;gap:1rem}.recent-work-section .button{width:100%;margin-top:1rem}@media screen and (min-width: 769px){.index-heading{align-items:flex-start}.hero-heading{max-width:40ch;margin-bottom:1rem}.sbm-section{display:grid;grid-template:repeat(4, min-content)/2fr 3fr}.sbm-section h2,.sbm-section a{grid-column:1 / -1}.sbm-section a{justify-self:end;padding:1rem 0}.sbm-section .sbm-item{margin:0}.sbm-section p{margin:0;padding:1rem;background-color:#f5f5f5;font-size:1rem}.services-section{grid-template-columns:1fr 1fr}.services-section .services-list{display:flex;flex-direction:column;justify-content:space-around;padding:0 1rem}.services-section .services-item{font-size:1rem}.services-section a{justify-self:end}.services-section .services-small{display:none}.services-section .services-large{display:inline;width:25rem}.recent-work-section .work-list{padding:0}.link-container{display:flex;justify-content:flex-end;padding-top:1rem}.link-container a{font-weight:600}.page-kind-home section:not(.index-heading) .button{width:auto}}