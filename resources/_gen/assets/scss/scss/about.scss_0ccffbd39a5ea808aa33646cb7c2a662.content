.person-tile{display:grid;position:relative;padding:0.75rem;grid-template-columns:1fr max-content;grid-template-rows:repeat(2, max-content);border-bottom:1px solid rgba(0,0,0,0.1);font-size:0.75rem}.person-title{color:inherit}.person-name{font-size:1rem;font-weight:700;line-height:1.25}.linked-in-link{display:flex;grid-row:1 / -1;grid-column:2 / 3;place-self:stretch;padding-left:0.5rem;border-left:1px solid rgba(0,0,0,0.1);line-height:1}.linked-in-logo{width:1rem}@media screen and (min-width: 1128px){.person-tile{grid-template-columns:1fr;grid-template-rows:max-content 1fr max-content;gap:0.5rem;border-radius:5px;box-shadow:0 0 4px rgba(0,0,0,0.35)}.linked-in-link{grid-row:auto;grid-column:auto;padding-top:0.5rem;padding-left:0;border-top:1px solid rgba(0,0,0,0.1);border-left:0}}.about-content-container .ideacrew-logo{display:none}.fit-content{width:fit-content}.services-section{margin-right:calc(var(--side-padding) * -1);margin-left:calc(var(--side-padding) * -1);padding:var(--side-padding);background-color:var(--neutral-096)}.services-graphic{place-self:center;width:auto;max-width:75px;max-height:70px;grid-row:span 2;margin:1rem}.service-container{display:grid;grid-template-columns:1fr 60vw;grid-template-rows:repeat(2, max-content)}.service-container ul,.service-container h3{font-family:var(--sans-serif)}.service-container ul{margin:0;padding:0;list-style:none}.service-container li{font-size:0.75rem;text-align:left}.service-container h3{margin-bottom:0;font-size:1rem;text-align:left}.values{padding:0.5rem 1rem;border-left:5px solid var(--blue-035)}.values h3{font-family:var(--sans-serif);font-size:1rem;font-weight:600}.values p{margin-bottom:0;font-size:0.75rem}.service-container+.service-container{margin-top:2rem}.leadership-team{display:grid;padding:0;grid-template-columns:repeat(auto-fit, minmax(12rem, 1fr));list-style:none}.about-content{margin-bottom:5.5rem}.career-graphic{margin-top:1rem}@media screen and (min-width: 769px){.about-content-container{display:grid;grid-template-columns:80% 1fr}.about-content-container h1{grid-column:span 2}.about-content-container .ideacrew-logo{display:block;justify-self:center}.leadership-team{grid-template-columns:repeat(auto-fit, minmax(12rem, 1fr))}.careers-section{display:grid;grid-template-columns:3fr 1fr}.careers-section h2{grid-column:1 / -1}.careers-section .button{align-self:center;justify-self:start;grid-column:1 / 2}.careers-section .career-graphic{grid-column:2 / 3;grid-row:2 / 4}.careers-content{grid-column:1 / 2;max-width:55ch}}@media screen and (min-width: 1128px){.services-section{display:grid;margin-right:0;margin-left:0;padding:1rem 0;grid-template-columns:1fr repeat(4, 13.332rem) 1fr;grid-column:1 / -1}.services-section h2{grid-column:2 / span 4}.service-container{grid-template-columns:auto;grid-template-rows:80px max-content max-content;gap:1rem}.service-container+.service-container{margin-top:0}.service-container:first-of-type{grid-column-start:2}.values-section{display:grid;padding:2rem 0;grid-template-columns:1fr repeat(3, 17.776rem) 1fr;grid-column:1 / -1}.values-section h2{grid-column:2 / span 3}.values-section .people{grid-column:2 / 3}.careers-content{max-width:75ch}.leadership-team{gap:0.75rem}}
